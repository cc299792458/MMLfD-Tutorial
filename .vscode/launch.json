            "program": "${file}",
            "console": "integratedTerminal",
            "env": {
                "QT_QPA_PLATFORM": "xcb",
                // "QT_PLUGIN_PATH": "/usr/lib/x86_64-linux-gnu/qt5/plugins",
                // "LD_LIBRARY_PATH": "/usr/lib/x86_64-linux-gnu:${env:LD_LIBRARY_PATH}"
